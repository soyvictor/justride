<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <div id="main-logo" >
      JustRide
      </div>
    <% end %>
<%= render 'shared/searchbar' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active mr-3">
          <%= link_to "Rent your motorcycle", new_motorcycle_path, class: "nav-link", style: "font-family: raleway; font-weight: 500;" %>
        </li>
        <!-- <li class="nav-item"> -->
          <!-- <%= link_to "Messages", "#", class: "nav-link" %> -->
        <!-- <li class="nav-item dropdown"> -->
          <!-- <i class="fas fa-user-circle avatar dropdown-toggle" id="navbarDropdown" data="{toggle: 'dropdown'}" aria-haspopup=“true” aria-expanded=“false”></i> -->
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, gravity: :face, crop: :thumb, height: 400, width: 400, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
         <% else %>
         <%= image_tag "https://res.cloudinary.com/vc334/image/upload/c_thumb,g_face,h_400,w_400/ldy28x5xt9skq4f2gdznnrs8p490", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", edit_user_path(current_user), class: "dropdown-item" %>
            <%= link_to "My Bookings", upcoming_bookings_bookings_path, class: "dropdown-item" %>
            <%= link_to "My Motorcycles", my_motorcycles_motorcycles_path, class: "dropdown-item" %>
            <hr style="margin: 0px 8px;">
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-success" %>
        </li>
      <% end %>

    </ul>
  </div>
</div>
