 <h1 style="padding:8px" class="ml-2">Motorcycles in...<%= @search["address"].upcase %> </h1>
 <div class="container-fluid  ">
  <div class="moto-cards">
    <% @motorcycles.each do |motorcycle| %>
        <div class="card-product">
          <%= cl_image_tag motorcycle.photos.first.key, height: 300, width: 400, crop: :fill %>
         <a style="color: inherit;" href=" <%= motorcycle_path(motorcycle) %>">
          <div class="card-product-infos">
            <div class="card-product-infos-top">
              <h2> <%= motorcycle.year %> <%= motorcycle.brand %> <%= motorcycle.model %> </h2>
            </div>
            <p><%= motorcycle.title %></p>
            <!-- <p><%= motorcycle.description %> </p> -->
            <div class="card-product-infos-middle">
<!--               <p> Brand: <%= motorcycle.brand %> </p>
              <p> Model: <%= motorcycle.model %> </p>
              <p> Type: <%= motorcycle.motorcycle_type %> </p>
              <p> Year: <%= motorcycle.year %> </p>
              <p> Engine: <%= motorcycle.engine_size %>cc </p> -->
            </div>
            <p style="margin-top: 0px;"> <%= motorcycle.address %> </p>
            <div class="card-product-infos-bottom">
              <p> <strong><span style="font-size: 15px;"><%= rand(2.5..4.9).round(1) %></strong></span> <i style="font-size: 13px;" class="far fa-star"></i> (<%= motorcycle.reviews.count %> Comments) </p>
              <p> <strong><span style="font-size: 15px;">$<%= motorcycle.price_per_day %> / day</strong></span> </p>
            </div>
          </div>
        </a>
        </div>
     <% end %>
   </div>
      <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
 </div>


