<h1 class="text-center mt-4">Create your new motorcycle listing</h1>
<div class="m-auto" style="width: 700px">

<%= simple_form_for [@motorcycle] do |f| %>
  <%= f.input :brand %>
  <%= f.input :model %>
  <%= f.input :year %>
  <%= f.input :engine_size %>
  <%= f.input :description %>
  <%= f.label 'Riding gear included?' %> <br>
  <%= f.label(:gear_included, "true") %>
  <%= f.radio_button(:gear_included, "true") %>
  <%= f.label(:gear_included, "false") %>
  <%= f.radio_button(:gear_included, "false") %>
  <%= f.input :price_per_day%>
  <%= f.input :motorcycle_type, collection: [ "Street", "Touring", "Off-road", "Standard", "Cruiser", "Scooter"] %>
  <div class="text-center">
  <%= f.submit "List your motorcycle", class: "btn btn-primary" %>
  </div>
<% end %>

</div>

