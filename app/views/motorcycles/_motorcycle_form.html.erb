<div class="m-auto" style="width: 550px">

<%= simple_form_for [@motorcycle] do |f| %>
  <%= f.input :brand %>
  <%= f.input :model %>
  <%= f.input :year %>
  <%= f.input :motorcycle_type, collection: [ "Street", "Touring", "Off-road", "Standard", "Cruiser", "Scooter"] %>
  <%= f.input :engine_size, label: 'Engine size (cc)' %>
  <%= f.input :title %>
  <%= f.input :description, input_html: { rows: 8 } %>
  <%= f.input :gear_included, label: 'Riding gear included'%>
  <%= f.input :price_per_day%>
  <%= f.input :address%>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>

  <div class="mb-5">
  <%= f.submit "List your motorcycle", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
