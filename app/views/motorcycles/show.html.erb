<div class="container py-3">
  <div class="row">
    <div class="col-12 col-lg-8">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="false">

        <div class="carousel-inner rounded mb-3" style="width:100%; height: 500px !important;">
          <div class="carousel-item active">
            <%= cl_image_tag @motorcycle.photos.first.key,  class: "d-block w-100", alt: "first slide" %>
          </div>

          <% @motorcycle.photos.drop(1).each do |photo| %>
            <div class="carousel-item">
              <%= cl_image_tag photo.key,  class: "d-block w-100", alt: "a slide" %>
            </div>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <h1><%= @motorcycle.title %></h1>
      <p><%= @motorcycle.description %></p>
      <p style="font-style: italic">More info:</p>
      <ul>
        <li>Engine size: <%= @motorcycle.engine_size %></li>
        <li>Riding gear included: <%= @motorcycle.gear_included ? "yes" : "no" %></li>
      </ul>

    </div>

    <div class="col-12 col-lg-4">
      <div class="border p-3">
        <h2>Book this bike!</h2>


        <form action="/bookings" method="post" id="new_booking">

          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">


          <div class="form-group">
            <label for="">Pickup</label>
            <input type="date"  class="form-control" name="booking[start_date]">
          </div>

          <div class="form-group">
            <label for="">Dropoff</label>
            <input type="date"  class="form-control" name="booking[end_date]">
          </div>

          <input type="hidden" id="motorcycle_id" name="motorcycle_id" value=<%= @motorcycle.id %> >

          <input type="submit" value="Book now" class="btn btn-primary btn-lg w-100">
          <p style="color: red;" class="mt-2"><%= @error %></p>
        </form>
      </div>
    </div>
  </div>

  <hr>
  <div class="reviews" style="margin-top: 30px; width: 600px">
    <h3> Comments (<%= Review.count %>) </h3>
      <%= simple_form_for([ @motorcycle, @review ]) do |f| %>
        <%= f.input :content, as: :text, placeholder: "Write your comment", label: false %>
        <%= f.button :submit, 'Create Comment', :class => 'btn-primary search-button mb-5' %>
      <% end %>
      <% if @motorcycle.reviews.blank? %>
        Be the first to leave a review for <%= @motorcycle.title %>
      <% else %>
        <% @motorcycle.reviews.each do |review| %>
        <div class="review" style="padding: 10px 10px;  overflow-wrap: break-word;">

          <strong><%= review.user.email %></strong> <span style="font-size: 11px; color: gray;"><%= time_ago_in_words(review.created_at.to_time) %> ago </span><p><%= review.content %></p>
          <div class="review-info" style="display: flex; justify-content: space-between;">
            <div class="likes" style="display: flex; width: 50px; justify-content: space-between; margin-top: 5px;">
              <i class="far fa-thumbs-down" style="font-size: 15px; color: gray;"></i>
              <i class="far fa-thumbs-up" style="font-size: 15px; color: gray;"></i>
            </div>
            <div class="ctas" style="display: flex; width: 100px; justify-content: space-between; color: gray; font-size: 12px;">
          <p> Share <p>
          <p> Reply <p>
            </div>


          </div>
          <hr>
        </div>
        <% end %>
      <% end %>
  </div>

  </div>

</div>
