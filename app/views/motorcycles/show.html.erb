<div class="container py-3">
  <div class="row">
    <div class="col-12 col-lg-8">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="false">

        <div class="carousel-inner rounded mb-3">
          <div class="carousel-item active">
            <%= cl_image_tag @motorcycle.photos.first.key,  class: "d-block w-100", alt: "first slide" %>
          </div>

          <% @motorcycle.photos.drop(1).each do |photo| %>
            <div class="carousel-item">
              <%= cl_image_tag photo.key,  class: "d-block w-100", alt: "a slide" %>
            </div>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <h1><%= @motorcycle.title %></h1>
      <p><%= @motorcycle.description %></p>

    </div>

    <div class="col-12 col-lg-4">
      <div class="border p-3">
        <h2>Book this bike!</h2>

        <form action="#">

          <div class="form-group">
            <label for="">Pickup</label>
            <input type="date" placeholder="05/20/20" class="form-control">
          </div>

          <div class="form-group">
            <label for="">Dropoff</label>
            <input type="date" placeholder="05/22/20" class="form-control">
          </div>

          <input type="submit" value="Book now" class="btn btn-primary btn-lg w-100">

        </form>
      </div>
    </div>

  </div>
</div>
