<div class="container">
  <h1 style=" padding-bottom: 4px; margin-top: 24px; font-size: 28px; font-family: raleway; font-weight: 600; border-bottom: 1px solid #e4e4e4;">My Motorcycles</h1>
  <div class="mt-4">
  <% @motorcycles.each do |motorcycle| %>
    <div class="cardy">
      <%= cl_image_tag motorcycle.photos.first.key, height: 90, width: 140, crop: :fill %>

    <div class="cardy-description ml-3 mt-1" style="margin-right: 15px; align-items: center !important;">
      <div>
        <h3><%= motorcycle.year %> <%= motorcycle.brand %> <%= motorcycle.model %> <span style="font-weight: normal; font-size: 16px; ">($<%= motorcycle.price_per_day %>/day)</span></h3>
        </div>
      <div>
        <%= link_to 'Go to listing', motorcycle_path(motorcycle), class: "text-dark" %> |
        <%= link_to 'Edit', edit_motorcycle_path(motorcycle), class: "text-dark"%> <br>
        <a class="text-dark" href="<%= my_motorcycles_host_motorcycles_path %>" style="font-size: 1rem">View bookings (<%= motorcycle.bookings.count%>)</a>
      </div>
    </div>
  </div>
  <% end %>
  </div>

</div>



