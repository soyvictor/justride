<h1 style="text-align: center; margin-top: 24px;">My Motorcycles</h1>
<div class="container">

  <% @motorcycles.each do |motorcycle| %>

    <div class="cardy">
      <%= cl_image_tag motorcycle.photo.key, height: 150, width: 200, crop: :fill %>
      <div class="cardy-description">
        <h3><%= motorcycle.year %> <%= motorcycle.brand %> <%= motorcycle.model %></h3>
        <%= link_to 'Go to listing', motorcycle_path(motorcycle) %> |
        <%= link_to 'Edit listing', edit_motorcycle_path(motorcycle) %>
        <a href="#" style="display: block;">Booked for May 20-22</a>
        <a href="#" style="display: block;">Booked for May 28-29</a>
      </div>
    </div>
  <% end %>
</div>
