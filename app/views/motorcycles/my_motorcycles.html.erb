<h1 style="text-align: center; margin-top: 24px;">My Motorcycles</h1>
<div class="container">

  <% @motorcycles.each do |motorcycle| %>

    <div class="cardy">
      <%= cl_image_tag motorcycle.photos.first.key, height: 150, width: 200, crop: :fill %>
      <div class="cardy-description">
        <h3><%= motorcycle.year %> <%= motorcycle.brand %> <%= motorcycle.model %></h3>
        <% motorcycle.bookings.each do |booking| %>
          <p style="font-size: 16px; padding:0px; margin:0px;">Booked <%= booking.start_date.strftime("%B %d") %> - <%= booking.end_date.strftime("%B %d") %> by <%= booking.user.email %></p>
        <% end %>
        <%= link_to 'Go to listing', motorcycle_path(motorcycle) %> |
        <%= link_to 'Edit', edit_motorcycle_path(motorcycle) %>

      </div>
    </div>
  <% end %>
</div>
