<h1 style="text-align: center; margin-top: 24px;">My Motorcycles</h1>
<div class="container">

  <% @motorcycles.each do |motorcycle| %>

    <div class="cardy">
      <%= cl_image_tag motorcycle.photos.first.key, height: 150, width: 250, crop: :fill %>
      <div class="cardy-description">
        <h3><%= motorcycle.year %> <%= motorcycle.brand %> <%= motorcycle.model %> <span style="font-weight: normal; font-size: 16px; ">($<%= motorcycle.price_per_day %>/day)</span></h3>
        <div style="margin-bottom: 2px;">
        <%= link_to 'Go to listing', motorcycle_path(motorcycle) %> |
        <%= link_to 'Edit', edit_motorcycle_path(motorcycle) %>
        </div>
        <% motorcycle.bookings.each do |booking| %>
          <p style="font-size: 16px; display: block; margin-bottom: 4px;"><span class="text-highlight">Booked</span> <%= booking.start_date.strftime("%B %d") %> - <%= booking.end_date.strftime("%B %d") %> by <%= booking.user.email %></p>
        <% end %>


      </div>
    </div>
  <% end %>
</div>
